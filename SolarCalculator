<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Net $/W Calculator</title>
  <style>
    body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; margin: 0; background:#f6f7f9; }
    .wrap { max-width: 560px; margin: 0 auto; padding: 16px; }
    .card { background: #fff; border-radius: 14px; padding: 16px; box-shadow: 0 8px 24px rgba(0,0,0,.06); }
    h1 { font-size: 18px; margin: 0 0 10px; }
    .row { display: grid; grid-template-columns: 1fr; gap: 10px; margin-top: 12px; }
    label { font-size: 13px; color: #333; }
    input {
      width: 100%; padding: 14px; font-size: 16px; border: 1px solid #dcdfe4;
      border-radius: 12px; outline: none; background: #fff;
    }
    input:focus { border-color: #7aa7ff; box-shadow: 0 0 0 3px rgba(122,167,255,.25); }
    .results { margin-top: 14px; background:#f3f6ff; border: 1px solid #dbe6ff; border-radius: 12px; padding: 12px; }
    .metric { display:flex; justify-content:space-between; gap: 12px; padding: 6px 0; }
    .metric b { font-variant-numeric: tabular-nums; }
    .ppw { font-size: 22px; }
    .btns { display:flex; gap: 10px; margin-top: 12px; }
    button {
      flex:1; padding: 12px; border-radius: 12px; border: 1px solid #dcdfe4;
      background:#fff; font-size: 15px;
    }
    button.primary { background:#1b5cff; color:#fff; border-color:#1b5cff; }
    .note { font-size: 12px; color:#555; margin-top: 10px; line-height: 1.35; }
    .muted { color:#666; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="card">
      <h1>Net $/W Calculator</h1>
      <div class="muted" style="font-size:13px;">
        Enter kW, total price, and adders. It calculates solar-only and net $/W.
      </div>

      <div class="row">
        <div>
          <label for="kw">System size (kW)</label>
          <input id="kw" inputmode="decimal" placeholder="e.g., 7.2" />
        </div>
        <div>
          <label for="total">Total contract price ($)</label>
          <input id="total" inputmode="decimal" placeholder="e.g., 31500" />
        </div>
        <div>
          <label for="adders">Additional project costs / adders ($)</label>
          <input id="adders" inputmode="decimal" placeholder="e.g., 2500" />
        </div>
      </div>

      <div class="results" aria-live="polite">
        <div class="metric">
          <span>Solar-only price</span>
          <b id="solarOnly">$0</b>
        </div>
        <div class="metric">
          <span>Total watts</span>
          <b id="watts">0 W</b>
        </div>
        <div class="metric">
          <span>Net $/W</span>
          <b class="ppw" id="ppw">$0.00</b>
        </div>
      </div>

      <div class="btns">
        <button class="primary" id="copyBtn" type="button">Copy Result</button>
        <button id="resetBtn" type="button">Reset</button>
      </div>

      <div class="note">
        Formula: <b>Net $/W = (Total − Adders) ÷ (kW × 1000)</b><br/>
        Tip: Add this page to your Home Screen (Share → Add to Home Screen).
      </div>
    </div>
  </div>

  <script>
    const kwEl = document.getElementById('kw');
    const totalEl = document.getElementById('total');
    const addersEl = document.getElementById('adders');

    const solarOnlyOut = document.getElementById('solarOnly');
    const wattsOut = document.getElementById('watts');
    const ppwOut = document.getElementById('ppw');

    const copyBtn = document.getElementById('copyBtn');
    const resetBtn = document.getElementById('resetBtn');

    function toNumber(value) {
      if (!value) return 0;
      // Allow commas and dollar signs
      const cleaned = String(value).replace(/[$, ]/g, '');
      const n = Number(cleaned);
      return Number.isFinite(n) ? n : 0;
    }

    function money(n) {
      return n.toLocaleString(undefined, { style: 'currency', currency: 'USD', maximumFractionDigits: 0 });
    }

    function money2(n) {
      return n.toLocaleString(undefined, { style: 'currency', currency: 'USD', minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    function update() {
      const kw = toNumber(kwEl.value);
      const total = toNumber(totalEl.value);
      const adders = toNumber(addersEl.value);

      const watts = kw > 0 ? kw * 1000 : 0;
      const solarOnly = total - adders;
      const ppw = (watts > 0) ? (solarOnly / watts) : 0;

      solarOnlyOut.textContent = money(solarOnly);
      wattsOut.textContent = watts.toLocaleString(undefined, { maximumFractionDigits: 0 }) + " W";
      ppwOut.textContent = money2(ppw);
    }

    [kwEl, totalEl, addersEl].forEach(el => el.addEventListener('input', update));

    copyBtn.addEventListener('click', async () => {
      update();
      const kw = kwEl.value || "";
      const total = totalEl.value || "";
      const adders = addersEl.value || "";
      const text = `kW: ${kw}
Total: ${total}
Adders: ${adders}
Solar-only: ${solarOnlyOut.textContent}
Watts: ${wattsOut.textContent}
Net $/W: ${ppwOut.textContent}`;
      try {
        await navigator.clipboard.writeText(text);
        copyBtn.textContent = "Copied!";
        setTimeout(() => copyBtn.textContent = "Copy Result", 1200);
      } catch (e) {
        alert("Copy failed. You can manually select the numbers.");
      }
    });

    resetBtn.addEventListener('click', () => {
      kwEl.value = "";
      totalEl.value = "";
      addersEl.value = "";
      update();
    });

    update();
  </script>
</body>
</html>
